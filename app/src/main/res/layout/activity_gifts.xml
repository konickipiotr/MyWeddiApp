<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingBottom="50dp">


        <TextView
            android:id="@+id/git_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strefa Prezentów" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Głowny prezent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/giftsIco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/arrowIco2"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:rotation="181"
                android:scaleX="2"
                android:scaleY="2"
                tools:srcCompat="?attr/actionModeCloseDrawable" />

            <ImageView
                android:id="@+id/moneyIco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/flower_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zamiast kwiatów" />

        <LinearLayout
            android:id="@+id/main_gift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/flowerIco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/arrowIco"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:rotation="181"
                android:scaleX="2"
                android:scaleY="2"
                tools:srcCompat="?attr/actionModeCloseDrawable" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/WineIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/BookIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/pottedFlowerIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/lotteryIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/fooderIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/charityIco"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/giftInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info" />

        <ListView
            android:id="@+id/giftListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="100dp">

        </ListView>
    </LinearLayout>
</ScrollView>